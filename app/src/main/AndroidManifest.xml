<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scott.demo">

    <application
        android:name="com.scott.demo.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.scott.demo.TestActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name="com.scott.demo.SeconderActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="scott" />
            </intent-filter>
        </activity>

        <activity android:name="com.scott.demo.ThirdActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="scott" />
            </intent-filter>
        </activity>


        <activity android:name="com.scott.demo.simple.ui.DiActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="scott" />
            </intent-filter>
        </activity>


        <activity android:name="com.scott.demo.simple.db.DbActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="scott" />
            </intent-filter>
        </activity>


        <meta-data
            android:name="com.scott.lib.imageloader.glide.CustomerGlideModule"
            android:value="GlideModule" />

    </application>

</manifest>
